<!-- Audiencia + Delivery -->
<section id="audiencia">
  <h2>Construcci칩n de Audiencia</h2>
  <label>Tama침o de audiencia:</label><br>
  <input type="number" id="audienceSize" value="100000"><br>
  <button onclick="buildAudience()">Construir Audiencia</button>
  <div id="audienceResult"></div>

  <h3>Asignar Delivery</h3>
  <button onclick="assignDelivery()">Asignar Delivery</button>
  <div id="deliveryResult"></div>
</section>

<!-- Publicar -->
<section id="publicar">
  <h2>Publicar en Instagram</h2>
  <label>Caption:</label><br>
  <input type="text" id="caption" value="Hola desde SOVYX 游"><br>
  <label>Imagen (URL):</label><br>
  <input type="text" id="mediaUrl" value="https://picsum.photos/600"><br>
  <button onclick="publishPost()">Publicar</button>
  <div id="publishResult"></div>
</section>

<!-- Estad칤sticas -->
<section id="estadisticas">
  <h2>Estad칤sticas</h2>
  <button onclick="getInsights()">Ver Insights</button>
  <div id="insightsResult"></div>
</section>

<!-- An치lisis -->
<section id="analisis">
  <h2>An치lisis de Contenido</h2>
  <label>Texto para analizar:</label><br>
  <input type="text" id="analysisText" value="Ejemplo de caption para an치lisis"><br>
  <button onclick="analyzeContent()">Analizar</button>
  <div id="analysisResult"></div>
</section>

<script>
const BASE_URL = "https://sovyxbackend-production.up.onrailway.app/api";

async function buildAudience() {
  const size = document.getElementById("audienceSize").value;
  const response = await fetch(`${BASE_URL}/audience/build`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ session_id: "gh_session", constraints: { size: size } })
  });
  const data = await response.json();
  document.getElementById("audienceResult").innerHTML =
    `<p>Audiencia creada: ${data.size} personas (ID: ${data.id})</p>`;
}

async function assignDelivery() {
  const response = await fetch(`${BASE_URL}/delivery/assign`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ session_id: "gh_session", audience_id: "aud_123456", delivery_window: "24h" })
  });
  const data = await response.json();
  document.getElementById("deliveryResult").innerHTML =
    `<p>Entrega asignada: ${data.reach} personas en 24h</p>`;
}

async function publishPost() {
  const caption = document.getElementById("caption").value;
  const mediaUrl = document.getElementById("mediaUrl").value;
  const response = await fetch(`${BASE_URL}/instagram/publish`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ caption: caption, media_url: mediaUrl })
  });
  const data = await response.json();
  document.getElementById("publishResult").innerHTML =
    `<p>Post publicado con ID: ${data.id}</p>`;
}

async function getInsights() {
  const response = await fetch(`${BASE_URL}/instagram/insights/17895695668004550`, {
    method: "GET"
  });
  const data = await response.json();
  document.getElementById("insightsResult").innerHTML =
    `<p>Alcance: ${data.reach} | Likes: ${data.likes}</p>`;
}

async function analyzeContent() {
  const text = document.getElementById("analysisText").value;
  const response = await fetch(`${BASE_URL}/content/analyze`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ text: text })
  });
  const data = await response.json();
  document.getElementById("analysisResult").innerHTML =
    `<p>Score de calidad: ${data.quality_score}</p>`;
}
</script>

